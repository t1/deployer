<?xml version="1.0" encoding="UTF-8" ?>
<project
        xmlns="urn:xsd:maven:pomx:5.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:xsd:maven:pomx:5.0.0 https://raw.githubusercontent.com/t1/pomx/master/src/main/resources/schemas/pomx-5.0.0.xsd">
    <war>com.github.t1:deployer:2.10.2-SNAPSHOT</war>
    <name>Deployer</name>
    <description>Deploys web archives to a JBoss web container</description>

    <properties>
        <jackson.version>2.9.9</jackson.version>
        <jqassistant.version>1.6.0</jqassistant.version>
        <sonar.java.spotbugs.reportPaths>./target/spotbugsXml.xml</sonar.java.spotbugs.reportPaths>
        <sonar.java.pmd.reportPaths>./target/pmd.xml</sonar.java.pmd.reportPaths>
        <sonar.java.checkstyle.reportPaths>./target/checkstyle-result.xml</sonar.java.checkstyle.reportPaths>
    </properties>

    <profile>com.github.t1:profile-javaee:7.0.0-SNAPSHOT</profile>
    <profile>com.github.t1:profile-t1:1.0.0-SNAPSHOT</profile>

    <build>
        <plugins>
            <plugin id="org.pitest:pitest-maven:1.4.8">
                <configuration>
                    <withHistory>true</withHistory>
                    <timestampedReports>false</timestampedReports>
                    <excludedTestClasses>*IT</excludedTestClasses>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-pmd-plugin:3.12.0"/>
            <plugin id="com.github.spotbugs:spotbugs-maven-plugin:3.1.11">
                <executions>
                    <execution>
                        <id>default</id>
                        <goals>
                            <goal>spotbugs</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <effort>Max</effort>
                    <threshold>Low</threshold>
                    <failOnError>true</failOnError>
                    <!--<includeFilterFile>${session.executionRootDirectory}/spotbugs-security-include.xml</includeFilterFile>-->
                    <!--<excludeFilterFile>${session.executionRootDirectory}/spotbugs-security-exclude.xml</excludeFilterFile>-->
                    <plugins>
                        <plugin>
                            <groupId>com.h3xstream.findsecbugs</groupId>
                            <artifactId>findsecbugs-plugin</artifactId>
                            <version>1.8.0</version> <!-- Auto-update to the latest stable -->
                        </plugin>
                    </plugins>
                </configuration>
            </plugin>
            <plugin id="com.spotify:dockerfile-maven-plugin:1.4.10">
                <executions>
                    <execution>
                        <id>default</id>
                        <goals>
                            <!--<goal>build</goal>-->
                            <!--<goal>push</goal>-->
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <repository>deployer/wildfly</repository>
                    <tag>${project.version}</tag>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <provided>
            <jar>com.github.t1:test-tools:1.6.1</jar>
        </provided>

        <compile>
            <jar>org.wildfly.core:wildfly-controller-client:8.0.0.Final</jar>
            <jar>org.wildfly.plugins:wildfly-plugin-core:2.0.1.Final</jar>
            <jar>com.github.t1:rest-client:1.0.13</jar>
            <jar>com.github.t1:problem-detail:1.0.2</jar>
            <jar>com.github.t1:logging-interceptor:3.2.3</jar>
            <jar>com.fasterxml.jackson.core:jackson-databind:${jackson.version}</jar>
            <jar>com.fasterxml.jackson.dataformat:jackson-dataformat-yaml:${jackson.version}</jar>
            <jar>com.google.guava:guava:27.1-jre</jar>
        </compile>

        <test>
            <jar>org.jdom:jdom2:2.0.6</jar>
            <jar>com.github.t1:xml:0.0.5</jar>
            <jar>ch.qos.logback:logback-classic:1.2.3</jar>
            <jar>io.dropwizard:dropwizard-testing:1.3.11</jar>
            <jar>org.jboss.aesh:aesh:0.66.19</jar>
            <jar>com.beust:jcommander:1.74</jar>
            <jar>org.apache.httpcomponents:fluent-hc:4.5.8</jar>
            <jar>org.jboss.shrinkwrap.resolver:shrinkwrap-resolver-spi:3.1.3</jar>
            <jar>org.jboss.shrinkwrap.resolver:shrinkwrap-resolver-impl-maven:3.1.3</jar>
            <jar>org.jboss.shrinkwrap:shrinkwrap-impl-base:1.2.6</jar>
        </test>
    </dependencies>

    <profiles>
        <profile>
            <id>jqassistant</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>jqassistant-maven-plugin</artifactId>
                        <version>${jqassistant.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>scan</goal>
                                    <goal>analyze</goal>
                                </goals>
                                <configuration>
                                    <warnOnSeverity>MINOR</warnOnSeverity>
                                    <failOnSeverity>MAJOR</failOnSeverity>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>jqassistant-maven-plugin</artifactId>
                        <version>${jqassistant.version}</version>
                        <reportSets>
                            <reportSet>
                                <reports>
                                    <report>report</report>
                                </reports>
                            </reportSet>
                        </reportSets>
                    </plugin>
                </plugins>
            </reporting>
        </profile>

        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
