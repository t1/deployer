<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="urn:xsd:maven:pomx:5.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="urn:xsd:maven:pomx:5.0.0 https://raw.githubusercontent.com/t1/pomx/master/src/main/resources/schemas/pomx-5.0.0.xsd">
    <war>com.github.t1:deployer:2.10.2-SNAPSHOT</war>
    <name>Deployer</name>
    <description>Deploys web archives to a JBoss web container</description>

    <properties>
        <jackson.version>2.9.4</jackson.version>
    </properties>

    <profile>com.github.t1:profile-javaee:7.0.0-SNAPSHOT</profile>
    <profile>com.github.t1:profile-t1:1.0.0-SNAPSHOT</profile>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin id="org.apache.maven.plugins:maven-war-plugin:3.0.0">
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin id="org.pitest:pitest-maven:1.2.2">
                <configuration>
                    <timestampedReports>false</timestampedReports>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-failsafe-plugin:2.19.1">
                <executions>
                    <execution>
                        <id>perform-it</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin id="com.buschmais.jqassistant:jqassistant-maven-plugin:1.3.0">
                <executions>
                    <execution>
                        <goals>
                            <goal>scan</goal>
                            <goal>analyze</goal>
                        </goals>
                        <configuration>
                            <warnOnSeverity>MINOR</warnOnSeverity>
                            <failOnSeverity>MAJOR</failOnSeverity>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-release-plugin:2.5.3"/>
            <plugin id="com.spotify:dockerfile-maven-plugin:1.3.7">
                <executions>
                    <execution>
                        <id>default</id>
                        <goals>
                            <goal>build</goal>
                            <!--<goal>push</goal>-->
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <repository>deployer/wildfly</repository>
                    <tag>${project.version}</tag>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>com.buschmais.jqassistant</groupId>
                <artifactId>jqassistant-maven-plugin</artifactId>
                <version>1.3.0</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>

    <dependencies>
        <provided>
            <jar>com.github.t1:test-tools:1.6.1</jar>
        </provided>

        <compile>
            <jar>org.wildfly.core:wildfly-controller-client:3.0.10.Final</jar>
            <jar>org.wildfly.plugins:wildfly-plugin-core:1.2.1.Final</jar>
            <jar>com.github.t1:rest-client:1.0.13</jar>
            <jar>com.github.t1:problem-detail:1.0.2</jar>
            <jar>com.github.t1:logging-interceptor:3.2.2</jar>
            <jar>com.fasterxml.jackson.core:jackson-databind:${jackson.version}</jar>
            <jar>com.fasterxml.jackson.dataformat:jackson-dataformat-yaml:${jackson.version}</jar>
            <jar>com.google.guava:guava:24.0-jre</jar>
        </compile>

        <test>
            <jar>org.jdom:jdom2:2.0.6</jar>
            <jar>com.github.t1:xml:0.0.5</jar>
            <jar>ch.qos.logback:logback-classic:1.2.3</jar>
            <jar>io.dropwizard:dropwizard-testing:1.2.4</jar>
            <jar>org.jboss.aesh:aesh:0.66.19</jar>
            <jar>com.beust:jcommander:1.72</jar>
            <jar>org.apache.httpcomponents:fluent-hc:4.5.5</jar>
            <jar>org.jboss.shrinkwrap.resolver:shrinkwrap-resolver-spi:3.1.2</jar>
            <jar>org.jboss.shrinkwrap.resolver:shrinkwrap-resolver-impl-maven:2.2.6</jar>
            <jar>org.jboss.shrinkwrap:shrinkwrap-impl-base:1.2.6</jar>
        </test>
    </dependencies>
</project>
